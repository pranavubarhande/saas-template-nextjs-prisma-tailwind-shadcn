# Database
DATABASE_URL="postgresql://username:password@localhost:5432/saas_template?schema=public"

# Next.js
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Stripe Configuration
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Optional: Stripe plan configuration (use either Payment Links or Price IDs)
# If PAYMENT_LINK is set for a plan, it will open directly; otherwise it will use PRICE_ID via Checkout Session
NEXT_PUBLIC_STRIPE_PAYMENT_LINK_PRO="https://buy.stripe.com/test_xxx_pro"
NEXT_PUBLIC_STRIPE_PAYMENT_LINK_ENTERPRISE="https://buy.stripe.com/test_xxx_enterprise"
NEXT_PUBLIC_STRIPE_PRICE_ID_PRO="price_123_pro"
NEXT_PUBLIC_STRIPE_PRICE_ID_ENTERPRISE="price_456_enterprise"

# Optional: Display prices (fallback if Stripe dashboard values not fetched)
NEXT_PUBLIC_PRO_PRICE_USD="29"
NEXT_PUBLIC_ENTERPRISE_PRICE_USD="99"

# Optional: When invoice webhook cannot resolve user, attribute to this user ID
STRIPE_FALLBACK_USER_ID=""

# Email Configuration (optional)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASS=""

# Development
NODE_ENV="development"
